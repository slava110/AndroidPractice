<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
>
    <TextView android:id="@+id/t_fio"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/textName"
              android:textSize="30sp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"/>

    <Button android:id="@+id/exit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exitBtnName"
            android:textSize="30sp"
            android:onClick="exitApp"
            app:layout_constraintStart_toStartOf="@+id/t_fio"
            app:layout_constraintEnd_toEndOf="@+id/t_fio"
            app:layout_constraintHorizontal_bias="0.486"
            app:layout_constraintTop_toBottomOf="@+id/t_fio"
            android:textColor="@color/white" android:backgroundTint="@color/black"/>
    <ImageView
            android:layout_width="171dp"
            android:layout_height="175dp" app:srcCompat="@drawable/baseline_cookie_24"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/t_fio"
            app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>